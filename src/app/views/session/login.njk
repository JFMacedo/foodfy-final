{% extends "layout.njk" %}

{% block head %}
  <title>Iniciar Sessão</title>

  {% include "./parts/styles.njk" %}
{% endblock %}

{% block header %}
  {% include "./parts/header.njk" %}
{% endblock %}

{% block content %}
  <main id="session-login" class="container">
    <form id="form-login" action="/admin/user" method="POST">
      <div class="header">
        <h2>Iniciar Sessão</h2>
      </div>
      <div class="fields">
        <div class="input-wrapper">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="Digite seu email" />
        </div>

        <div class="input-wrapper">
          <label for="password">Senha</label>
          <input type="password" name="password" id="password" placeholder="Digite sua senha" />
        </div>

        <div class="buttons-wrapper">
          <a href="/session/forgot-password">Perdeu a senha?</a>
          <button type="submit" class="button action-button">Acessar</button>
        </div>
      </div>
    </form>
  </main>
{% endblock %}