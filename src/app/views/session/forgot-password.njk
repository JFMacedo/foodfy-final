{% extends "layout.njk" %}

{% block head %}
  <title>Recuperar senha</title>

  {% include "./parts/styles.njk" %}
{% endblock %}

{% block header %}
  {% include "./parts/header.njk" %}
{% endblock %}

{% block content %}
  <main id="session-login" class="container">
    <form id="form-login" action="/session/forgot-password" method="POST">
      <div class="header">
        <h2>Esqueceu a Senha?</h2>
      </div>
      <div class="fields">
        <div class="input-wrapper">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Digite seu email para recuperar sua senha"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          />
        </div>

        <div class="buttons-wrapper">
          <button type="submit" class="button action-button">Recuperar</button>
        </div>
      </div>
    </form>
  </main>
{% endblock %}