<div class="recipes">
  {% for recipe in recipes %}
    <div class="recipe">
      <img src="{{ recipe.image }}" alt="image de {{ recipe.title }}">

      <div class="recipe-info">
        <p>{{ recipe.title }}</p>
        <span>por {{ recipe.chef_name }}</span>
        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
      </div>
    </div>
  {% endfor %}
</div>