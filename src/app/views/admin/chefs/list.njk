{% extends "layout.njk" %}

{% block head %}
  <title>Chefs</title>

  {% include "../parts/styles.njk" %}
{% endblock %}

{% block header %}
  {% include "../parts/header.njk" %}
{% endblock %}

{% block content %}
  <main id="admin-chefs" class="container">
    <div class="header">
      <h2>Gerencias chefs</h2>
      <a href="/admin/chefs/create" class="button action-button">Novo Chef</a>
    </div>

    <div class="chefs-grid">
      {% for chef in chefs %}
        <div class="chef">
          <img src="{{ chef.avatar_url }}" alt="image de {{ chef.name }}">

          <div class="chef-info">
            <p>{{ chef.name }}</p>
            <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </main>
{% endblock %}