{% extends "layout.njk" %}

{% block head %}
  <title>Editar {{ recipe.title }}</title>

  {% include "../parts/styles.njk" %}
{% endblock %}

{% block header %}
  {% include "../parts/header.njk" %}
{% endblock %}

{% block content %}
  <main id="admin-edit" class="container">
      <div class="header">
        <h2>Editando receita</h2>
        <div class="actions">
          <button type="submit" form="form-delete" class="button delete-button">Deletar</button>
          <button type="submit" form="form-edit" class="button action-button">Salvar Receita</button>
        </div>
      </div>
    <form id="form-edit" action="/admin/recipes?_method=PUT" method="POST">
      <input type="hidden" name="id" value="{{ recipe.id }}">
      {% include "./fields.njk" %}
    </form>

    <form id="form-delete" action="/admin/recipes?_method=DELETE" method="POST">
      <input type="hidden" name="id" value="{{ recipe.id }}">
    </form>
  </main>
{% endblock %}