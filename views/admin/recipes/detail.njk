{% extends "layout.njk" %}

{% block head %}
  <title>{{ recipe.title }}</title>

  {% include "../parts/styles.njk" %}
{% endblock %}

{% block header %}
  {% include "../parts/header.njk" %}
{% endblock %}

{% block content %}
  <main id="page-detail" class="container">
    <div class="header">
      <h2>Receita: {{ recipe.title }}</h2>
      <div class="actions">
        <a href="/admin/recipes/{{ id }}/edit" class="button action-button">Editar receita</a>
      </div>
    </div>

    <img src="{{ recipe.image }}" alt="imagem de {{ recipe.title }}">
    <h1 class="title">{{ recipe.title }}</h1>
    <span class="author">por {{ recipe.author }}</span>

    <section class="information">
      <h2>Ingredientes</h2>
      <ul class="data">
        {% for ingredient in recipe.ingredients %}
          <li>{{ ingredient }}</li>
        {% endfor %}
      </ul>
    </section>
    <section class="information">
      <h2>Modo de preparo</h2>
      <ol class="data">
        {% for step in recipe.preparation %}
          <li>{{ step }}</li>
        {% endfor %}
      </ol>
    </section>
    <section class="information">
      <h2>Informações adicionais</h2>
      <p class="data">{{ recipe.information }}</p>
    </section>
  </main>
{% endblock %}