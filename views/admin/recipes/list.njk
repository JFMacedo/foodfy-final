{% extends "layout.njk" %}

{% block head %}
  <title>Receitas</title>

  {% include "../parts/styles.njk" %}
{% endblock %}

{% block header %}
  {% include "../parts/header.njk" %}
{% endblock %}

{% block content %}
  <main id="admin-recipes" class="container">
    <div class="header">
      <h2>Gerencias receitas</h2>
    </div>

    <div class="recipes">
      {% for recipe in recipes %}
        <div class="recipe">
          <img src="{{ recipe.image }}" alt="image de {{ recipe.title }}">

          <div class="recipe-info">
            <p>{{ recipe.title }}</p>
            <span>por {{ recipe.author }}</span>
            <a>Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </main>
{% endblock %}